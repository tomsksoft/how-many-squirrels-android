<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.howmuchof.squirrels.android" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.howmuchof.squirrels.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.howmuchof.squirrels.android.AddDataActivity"
            android:label="@string/dataPage_addPageTitle"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name="com.howmuchof.squirrels.android.ModifyDataActivity"
            android:label="@string/dataPage_modifyPageTitle"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name="com.howmuchof.squirrels.android.SettingsActivity"
            android:label="@string/settingsPageTitle">
        </activity>
    </application>

</manifest>
